<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
       <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/primary</item>
        <item name="colorPrimaryDark">?attr/status_bar</item>
        <item name="colorAccent">?attr/secondary</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="general_button">
        <item name="android:background">@drawable/general_button</item>
        <item name="android:textColor">?attr/on_primary</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="preferences_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/primary</item>
    </style>

    <style name="preferences_radio_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/on_surface</item>
    </style>

    <style name="preferences_linear_layout">
        <item name="android:background">@drawable/surface_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="menu_buttons">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textColor">?attr/on_surface</item>
        <item name="android:background">@drawable/surface_background</item>
    </style>

    <style name="menu_buttons_bottom">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">?attr/on_background_hint</item>
    </style>

    <style name="resource_titles">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">?attr/primary</item>
    </style>

    <style name="resource_attributes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="background">@drawable/resource_fields</item>
    </style>

    <style name="preferences_text">
        <item name="android:textColor">?attr/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="big_welcome_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/primary</item>
    </style>

    <style name="subtle_separator">
        <item name="android:height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="title_bar">
        <item name="android:layout_height">56dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/top_bar</item>
        <item name="android:textColor">?attr/on_top_bar</item>
    </style>

    <style name="day_plan_time">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/on_surface</item>
    </style>

    <style name="day_plan_content">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/primary</item>
    </style>

    <style name="resource_LL">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/surface_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="resource_item_LL">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="add_resource_icon">
        <item name="tint">?attr/secondary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:src">@drawable/add_icon</item>
    </style>

</resources>
