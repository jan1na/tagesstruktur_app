<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Successes">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/successes_RV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="4dp"
            android:background="?attr/surface"
            >

            <TextView
                android:id="@+id/successes_title_TV"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="?attr/on_surface"
                android:gravity="center"></TextView>

            <ImageView
                android:id="@+id/success_back_B"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:src="@drawable/left_arrow_icon"
                android:tint="?attr/on_surface"
                ></ImageView>

            <ImageView
                android:id="@+id/success_next_B"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="4dp"
                android:src="@drawable/right_arrow_icon"
                android:tint="?attr/on_surface"></ImageView>
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>